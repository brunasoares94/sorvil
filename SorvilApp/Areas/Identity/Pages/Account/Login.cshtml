@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

 <div class="login-image">
  <img src="~/img/lendo img.svg" />
 </div>
    <div class="formulario">
            <div class="faca-login">
        <h2>Faça seu login e viaje sem sair do lugar...</h2>
            </div>
          <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                <div class="botao-registro">
                    <button id="login-submit" type="submit" asp-controller="BookSearch" asp-action="Perfil">Login</button>
                </div>
            <div class="form-floating">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
        <div class="final-login">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastre-se!</a>
                    </p>
                    <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de confirmação</a>
                    </p>
                </div>
            </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
