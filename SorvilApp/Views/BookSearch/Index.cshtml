@model SearchViewModel

<div class="formulario">
	<div class="imagem-pesquisar">
		<img src="~/img/procurando.svg" />
	</div>
	<div class="formulario-search">
		<form id="account-pesquisar" method="get" asp-controller="BookSearch" asp-action="Result">
			<div class="letras-pesquisar"> 
				<label for="searchTerm">Nome do Livro/Autor:</label>
				<input type="text" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" />
			</div>
			<div class="letras-pesquisar">
				<label for="genre">Gênero:</label>
				<input type="text" id="genre" name="genre" value="@Model.Genre" />
			</div>
			<div class="letras-pesquisar">
				<label for="year">Ano de Lançamento:</label>
				<input type="number" id="year" name="year" value="@Model.Year" />
			</div>
			<div class="letras-pesquisar">
				<label for="hasISBN">Possui ISBN:</label>
				<input type="checkbox" id="hasISBN" name="hasISBN" @(Model.HasISBN == true ? "checked" : "") />
			</div>
			<div class="botao-pesquisar">
				<button type="submit" asp-controller="BookSearch" asp-action="Result">Pesquise aqui sua próxima leitura:</button>
			</div>
		</form>
	</div>
	</div>